{
  "$schema": "https://opencode.ai/config.json",
  // Theme configuration
  "theme": "catppuccin-macchiato",
  "model": "anthropic/claude-opus-4-5",
  //"model": "anthropic/claude-sonnet-4-5",
  "autoupdate": true,
  "agent": {
    "build": {
      "permission": {
        "edit": {
          "*": "ask",
          "*.md": "allow",
          "*.py": "ask",
        },
        "bash": {
          "rm *": "deny",
          "*": "ask",
          "ls *": "allow",
          "rg *": "allow",
          "grep *": "allow",
          "git log *": "allow",
          "git diff *": "allow",
          "git show *": "allow",
          "git status *": "allow",
          "git branch --show-current": "allow",
          "git branch -a": "allow",
          "uv run pytest*": "allow",
        },
        "webfetch": "ask",
        "doom_loop": "ask",
        "external_directory": "ask"
      }
    },
    "plan": {
      "permission": {
        "edit": {
          "*": "deny",
          "*.md": "allow",
          "*.py": "ask",
        },
        "bash": {
          "rm *": "deny",
          "*": "ask",
          "ls *": "allow",
          "rg *": "allow",
          "grep *": "allow",
          "git log *": "allow",
          "git diff *": "allow",
          "git show *": "allow",
          "git status *": "allow",
          "git branch --show-current": "allow",
          "git branch -a": "allow",
          "uv run pytest*": "allow",
        },
        "webfetch": "ask",
        "doom_loop": "ask",
        "external_directory": "ask"
      }
    },
  },
}
